#!/bin/sh

# Copy emojies into clipboard, using dmenu
# dependencies: "dmenu" "xclip" "notify-send"

TempFile=$(mktemp)

dmenu -l 15 -p "Emoji:" > "$TempFile" <<EOF
[ðŸ˜†] very happy
[ðŸ˜‚] laugh
[ðŸ¤£] laugh more
[ðŸ˜…] embarrassment laugh
[ðŸ™‚] regular smile
[â˜º] bigger smile
[ðŸ˜Š] satisfaction smile
[ðŸ˜‰] wink
[ðŸ¥°] loved
[ðŸ˜] love eyes
[ðŸ¤©] awesome
[ðŸ˜˜] kiss
[ðŸ˜‹] yum tasty
[ðŸ¤¤] drooling tasty
[ðŸ˜›] tongue out funny
[ðŸ˜] tongue out epic funny
[ðŸ¤‘] rich money
[ðŸ¤—] hug
[ðŸ¤«] shhh silent
[ðŸ¤”] thinking
[ðŸ˜‘] bum face
[ðŸ˜¬] yikes messed it up
[ðŸ˜ª] sleepy
[ðŸ¤’] fever sick
[ðŸ¤¯] head blown amazed
[ðŸ¥¶] freeze"
EOF

read -r Emoji < "$TempFile"

Emoji=${Emoji#[}
Emoji=${Emoji%%]*}

# Copy emoji to clip board
xclip -sel clip <<EOF
$Emoji
EOF

# Norification
[ $? -eq 0 ] && notify-send "Emoji selector" "Copied $Emoji to clipboard"


rm -f "$TempFile"
