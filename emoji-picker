#!/bin/sh

# type emojies using dmenu
# dependencies: "dmenu" "xdotool"

TempFile=$(mktemp)
trap "Sh_exit" EXIT
Sh_exit () {
	rm -f "$TempFile"
}

dmenu -l 15 -p "Emoji:" > "$TempFile" <<EOF
[ðŸ˜†] very happy
[ðŸ˜‚] laugh
[ðŸ¤£] laugh more
[ðŸ˜…] embarrassment laugh
[ðŸ™‚] regular smile
[â˜º] bigger smile
[ðŸ˜Š] satisfaction smile
[ðŸ˜‰] wink
[ðŸ¥°] loved
[ðŸ˜] love eyes
[ðŸ¤©] awesome
[ðŸ˜˜] kiss
[ðŸ˜‹] yum tasty
[ðŸ¤¤] drooling tasty
[ðŸ˜›] tongue out funny
[ðŸ˜] tongue out epic funny
[ðŸ¤‘] rich money
[ðŸ¤—] hug
[ðŸ¤«] shhh silent
[ðŸ¤”] thinking
[ðŸ˜‘] bum face
[ðŸ˜¬] yikes messed it up
[ðŸ˜ª] sleepy
[ðŸ¤’] fever sick
[ðŸ¤¯] head blown amazed
[ðŸ¥¶] freeze"
EOF

read -r Emoji < "$TempFile"

[ -z "$Emoji" ] && exit

Emoji=${Emoji#[}
Emoji=${Emoji%%]*}

# type emoji directly
xdotool getactivewindow type "$Emoji"
